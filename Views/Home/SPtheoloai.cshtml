@{
    ViewBag.Title = "SPtheoloai";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>SPtheoloai</h2>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (var sp in Model)
            {
                <div class="col-md-3 col-sm-6">

                    <div class="single-shop-product">
                        <div class="product-upper">
                            <a href="@Url.Action("Detail", "Home", new { id = sp.MaSP })"><img src="~/Content/images/All/@sp.ImageSP" alt="@sp.TenSP" /></a>
                            <h2><a href="@Url.Action("Detail", "Home", new { id = sp.MaSP })">@sp.TenSP</a></h2>
                        </div>
                        <div class="product-carousel-price">
                            <ins>@sp.Giatien VNĐ</ins>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>

       

        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
